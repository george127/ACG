/* Accordion Item */
.accordion-item {
  border: none;
  margin-bottom: 8px;
  overflow: hidden;
  border-radius: 10px;
}

/* Accordion Button */
.accordion-button {
  background: #ddd;
  color: #575454;
  font-size: 0.9rem;
  padding: 15px;
  border: none;
  transition: all 0.3s ease-in-out;
}

.accordion-button:hover {
  background: #e9691e;
  color: #fff;
}

.accordion-button:focus {
  box-shadow: none;
}

/* Opened Accordion Button */
.accordion-button:not(.collapsed) {
  background: #e9691e;
  color: white;
  border-radius: 10px 10px 0 0;
}

/* Accordion Body */
.accordion-body {
  background: white;
  font-size: 1rem;
  color: #333;
  box-shadow: inset 0px 3px 6px rgba(0, 0, 0, 0.1);
}

.accordion-body strong {
  color: #575454;
}

/* Smooth Transition */
.accordion-collapse {
  transition: height 0.4s ease-in-out, opacity 0.3s ease-in-out;
}